{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile read_system_stats",
            "type": "shell",
            "command": "g++",
            "args": [
                "read_system_stats.cpp",
                "-o",
                "read_system_stats.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run read_system_stats",
            "type": "shell",
            "command": ".\\read_system_stats.exe",
            "dependsOn": "Compile read_system_stats",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
